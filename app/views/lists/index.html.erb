<div class="h-100 container my-5">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-lg-9">
      <div class="bg-dark-blue p-4 vh-100">
        <h1 class="text-light">Your lists</h1>

        <% @lists.each do |list| %>
          <div class="card my-3 list-item-bg">
            <div class="card-body">
              <div class="row">
                <div class="col-lg-10">
                  <p class="text-light m-0">
                    <%= list.name %>
                  </p>
                </div>
                <div class="col-lg-2">
                  <%= link_to 'View', list_todos_path(list), class: 'btn btn-light float-end' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>